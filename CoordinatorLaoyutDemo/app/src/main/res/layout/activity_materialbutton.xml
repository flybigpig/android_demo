<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:backgroundTint="@color/colorAccent"
        android:gravity="center"
        android:insetTop="0dip"
        android:insetBottom="0dip"
        android:text="Hello"
        android:theme="@style/Theme.MaterialComponents.Light.NoActionBar.Bridge"
        android:visibility="gone"
        app:cornerRadius="2dip"
        app:icon="@mipmap/ic_black_left_arrow_details"
        app:iconPadding="5dip"
        app:iconSize="10dip"
        app:iconTint="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/Cut"
        app:strokeColor="@color/colorPrimary"
        app:strokeWidth="1dip" />

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:backgroundTint="@color/colorAccent"
        android:gravity="center"
        android:insetTop="0dip"
        android:insetBottom="0dip"
        android:text="Hello"
        android:theme="@style/Theme.MaterialComponents.Light.NoActionBar.Bridge"
        android:visibility="gone"
        app:icon="@mipmap/ic_black_left_arrow_details"
        app:iconPadding="5dip"
        app:iconSize="10dip"
        app:iconTint="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/Cut"
        app:strokeColor="@color/colorPrimary"
        app:strokeWidth="1dip" />


    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/button_toggle_group"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        app:checkedButton="@+id/btn_left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:singleSelection="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_left"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="100dip"
            android:layout_height="40dip"
            android:gravity="center"
            android:insetTop="0dip"
            android:insetBottom="0dip"
            android:text="Hello"
            android:theme="@style/Theme.MaterialComponents.Light.NoActionBar.Bridge" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_middle"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="100dip"
            android:layout_height="40dip"
            android:gravity="center"
            android:insetTop="0dip"
            android:insetBottom="0dip"
            android:text="middle"
            android:textAllCaps="true"
            android:theme="@style/Theme.MaterialComponents.Light.NoActionBar.Bridge" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_right"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="100dip"
            android:layout_height="40dip"
            android:gravity="center"
            android:insetTop="0dip"
            android:insetBottom="0dip"
            android:text="right"
            android:textAllCaps="true"
            android:theme="@style/Theme.MaterialComponents.Light.NoActionBar.Bridge" />
    </com.google.android.material.button.MaterialButtonToggleGroup>
</androidx.constraintlayout.widget.ConstraintLayout>