<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/stack_11"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:text="Button11"
        app:layout_constraintEnd_toStartOf="@+id/stack_12"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/stack_12"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:text="Button12"
        app:layout_constraintEnd_toStartOf="@id/stack_13"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/stack_11"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/stack_13"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:text="Button13"
        app:layout_constraintEnd_toStartOf="@id/stack_14"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/stack_12"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/stack_14"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:text="Button14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/stack_13"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/inner_container"
        android:layout_width="0dip"
        android:layout_height="0dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stack_11" />
</androidx.constraintlayout.widget.ConstraintLayout>