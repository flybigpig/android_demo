<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/activity_motion6_scene"
    app:showPaths="true">

    <ImageView
        android:id="@+id/iv_motion6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_motion6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="balabalabala"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_motion6" />

    <ImageView
        android:id="@+id/iv_motion6_zan"
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:src="@mipmap/ic_zan" />

    <ImageView
        android:id="@+id/iv_motion6_share"
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:src="@mipmap/ic_share" />
</androidx.constraintlayout.motion.widget.MotionLayout>