<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="view_anchor_behavior">
        <attr name="anchorId" format="integer" />
    </declare-styleable>

    <declare-styleable name="view_zoom_behavior">
        <attr name="min_height" format="dimension" />
        <attr name="scrolling_id" format="integer" />
    </declare-styleable>

    <style name="Cut" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">20dp</item>
    </style>
</resources>
